version: "3.9"
services:
    haproxy:
        image: haproxy:{{ haproxy_version }}
        container_name: haproxy
        volumes:
            - ./config:/usr/local/etc/haproxy:ro
        network_mode: host
        user: root
        restart: always
        logging:
          driver: json-file
          options:
            max-file: '3'
            max-size: 100m